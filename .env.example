# ===========================================
# TaskScribe Landing Page - Environment Variables
# ===========================================
# Copy this file to .env.local and fill with your values
# NEVER commit .env.local to git!

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_NAME=TaskScribe
NEXT_PUBLIC_APP_URL=https://taskscribe.com.br

# ===========================================
# ANALYTICS
# ===========================================
# Google Analytics (opcional)
NEXT_PUBLIC_GA_ID=

# PostHog Analytics (se usar)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# ===========================================
# SOCIAL MEDIA
# ===========================================
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/taskscribe
NEXT_PUBLIC_GITHUB_URL=https://github.com/WallysonGalvao/taskScribe
NEXT_PUBLIC_DISCORD_URL=

# ===========================================
# SEO & METADATA
# ===========================================
NEXT_PUBLIC_SITE_NAME=TaskScribe
NEXT_PUBLIC_SITE_DESCRIPTION=Transcription app description
NEXT_PUBLIC_SITE_KEYWORDS=transcription,whisper,ai,desktop

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_NEWSLETTER=false
NEXT_PUBLIC_ENABLE_WAITLIST=false

# ===========================================
# DOWNLOAD LINKS
# ===========================================
# Download links para diferentes plataformas
NEXT_PUBLIC_DOWNLOAD_MAC_ARM=
NEXT_PUBLIC_DOWNLOAD_MAC_INTEL=
NEXT_PUBLIC_DOWNLOAD_WINDOWS=
NEXT_PUBLIC_DOWNLOAD_LINUX=
